<% content_for :head do %>
  <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Status</th>
      <th>start</th>
      <th>end</th>
      <th>expected[h]</th>
      <th>error</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.content %></td>
        <td><%= task.status %></td>
        <td><%= task.start_task %></td>
        <td><%= task.end_task %></td>
        <td><%= task.expected_hour %></td>
        <td><%= task.getActualHour %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    
    <%= line_chart @graph_data %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
