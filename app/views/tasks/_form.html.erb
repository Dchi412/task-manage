<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.number_field :status %>
  </div>
  
  <div class="field">
    <%= f.label :start_task %><br>
    <%= f.datetime_select :start_task, {},  class: 'form-control' %>
  </div>
  
  <div class="field">
    <%= f.label :end_task %><br>
    <%= f.datetime_select :end_task, {},  class: 'form-control' %>
  </div>
  
  <div class="field">
    <%= f.label :expected_hour %><br>
    <%= f.number_field :expected_hour, step: 0.1%>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
